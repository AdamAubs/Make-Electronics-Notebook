
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>MakeElectronics - Experiments</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 2rem;
      background-color: #f8f9fa;
    }
    h1 {
      color: #333;
    }
    ul {
      list-style-type: none;
      padding: 0;
    }
    li {
      margin-bottom: 0.5rem;
    }
    a {
      text-decoration: none;
      color: #007bff;
    }
    a:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <% if (user) { %>
    <h2>Experiments for this section</h2>
    <a href="/my/sections/<%= sectionId %>/experiments/createExperiment">Add experiment</a>
    <hr>
    <h3>Public sections</h3>
    <% if (publicExperiments.length > 0) { %>
      <ul>
        <% publicExperiments.forEach(function(experiment) { %>
          <li>
            <a href="/my/sections/<%= experiment.section_id %>/experiments/<%= experiment.id %>">
              <%= experiment.title %>
            </a>
            <p><%= experiment.description %></p>
          </li>
          <hr>
        <% }) %>
      </ul>
    <% } else { %>
      <p>There are no public experiments for this section yet.</p>
    <% } %>
    <h3>Created/Private Sections</h3>
    <% if (privateExperiments.length > 0) { %>
      <ul>
        <% privateExperiments.forEach(function(experiment) { %>
          <li>
            <a href="/my/sections/<%= experiment.section_id %>/experiments/<%= experiment.id %>">
              <%= experiment.title %>
            </a>
            <p><%= experiment.description %></p>
            <form action="/my/sections/<%= experiment.section_id %>/experiments/<%= experiment.id %>/delete" method="POST">
              <button type="submit" onclick="return confirm('Are you sure you want to delete this experiment?');">Delete</button>
            </form>
          </li>
          <hr>
        <% }) %>
      </ul>
    <% } else { %>
      <p>You have no private experiments for this section yet. </p>
    <% } %>
  <% } else { %>
    <h2>The Experiments for this section</h2>
    <hr>
    <% if (publicExperiments.length > 0) { %>
      <ul>
        <% publicExperiments.forEach(function(experiment) { %>
          <li>
            <a href="/sections/<%= experiment.section_id %>/experiments/<%= experiment.id %>">
              <%= experiment.title %>
            </a>
            <p><%= experiment.description %></p>
          </li>
          <hr>
        <% }) %>
      </ul>
    <% } else { %>
      <p>No experiments have been made for this section yet. </p>
    <% } %>
  <% } %>

  <a href="/">Back To Homepage</a>

</body>
</html>
