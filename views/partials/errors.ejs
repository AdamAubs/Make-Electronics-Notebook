<% if (typeof errors !== 'undefined' && errors.length > 0) { %>
  <div class="alert alert-danger" style="background-color: #f8d7da; color: #721c24; padding: 12px 16px; border-radius: 4px; margin-bottom: 16px; border: 1px solid #f5c6cb;">
    <ul style="margin: 0; padding-left: 20px;">
      <% errors.forEach(function(error) { %>
        <li><%= error.msg || error %></li>
      <% }); %>
    </ul>
  </div>
<% } %>

<% if (typeof flashErrorMessages !== 'undefined' && flashErrorMessages.length > 0) { %>
  <div class="alert alert-danger" style="background-color: #f8d7da; color: #721c24; padding: 12px 16px; border-radius: 4px; margin-bottom: 16px; border: 1px solid #f5c6cb;">
    <ul style="margin: 0; padding-left: 20px;">
      <% flashErrorMessages.forEach(function(msg) { %>
        <li><%= msg %></li>
      <% }); %>
    </ul>
  </div>
<% } %>

<% if (typeof flashSuccessMessages !== 'undefined' && flashSuccessMessages.length > 0) { %>
  <div class="alert alert-success" style="background-color: #d4edda; color: #155724; padding: 12px 16px; border-radius: 4px; margin-bottom: 16px; border: 1px solid #c3e6cb;">
    <ul style="margin: 0; padding-left: 20px;">
      <% flashSuccessMessages.forEach(function(msg) { %>
        <li><%= msg %></li>
      <% }); %>
    </ul>
  </div>
<% } %>


